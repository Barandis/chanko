{
  "name": "chanko",
  "private": true,
  "scripts": {
    "build": "node scripts/command.js build",
    "bundle:dev": "node scripts/command.js bundle:dev",
    "bundle:prod": "node scripts/command.js bundle:prod",
    "check": "node scripts/command.js check",
    "clean": "node scripts/command.js clean",
    "clean:docs": "rimraf docs/api",
    "commit": "npx git-cz",
    "cover": "node scripts/command.js cover",
    "docs": "npm run clean:docs && jsdoc -c ./jsdoc.json",
    "lint": "node scripts/command.js lint",
    "test": "node scripts/command.js test",
    "upload": "node scripts/command.js upload"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-async-generator-functions": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-webpack-alias-7": "^0.1.1",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.9",
    "cross-env": "^7.0.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.6.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "sinon": "^8.1.1",
    "sinon-chai": "^3.4.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "xduce": "^2.0.2"
  },
  "dependencies": {
    "@chanko/csp": "file:packages/csp"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "pre-push": "lint-staged && npm run check"
    }
  },
  "lint-staged": {
    "packages/*/{src,test}/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
