{
  "tags": {
    "allowUnknownTags": false
  },
  "source": {
    "include": [
      "packages/channels/src",
      "packages/operations/src"
    ]
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "encoding": "utf8",
    "template": "node_modules/ink-docstrap/template",
    "destination": "docs/api/",
    "recurse": true,
    "verbose": true
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": false
  },
  "templates": {
    "systemName": "Chanko",
    "copyright": "2000, Thomas J. Otterson",
    "includeDate": false,
    "navType": "vertical",
    "theme": "slate",
    "linenums": true,
    "outputSourceFiles": true,
    "syntaxTheme": "dark"
  }
}
